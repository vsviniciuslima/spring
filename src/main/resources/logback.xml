    <logger name="com.concepts.spring" level="trace" additivity="false">
        <appender-ref ref="FILE-ROLLING"/>
    </logger>


    <root level="error">
        <appender-ref ref="FILE-ROLLING"/>
    </root>

    <logger name="com.concepts.spring" level="trace" additivity="false">
        <appender-ref ref="CONSOLE"/>
    </logger>
    <root level="error">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>